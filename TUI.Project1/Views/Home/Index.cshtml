@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/HomeStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-combobox/1.1.8/css/bootstrap-combobox.min.css">
</head>

<script type="text/javascript" src="~/Scripts/HomeScript.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-combobox/1.1.8/js/bootstrap-combobox.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<body class="background">
    <script>
        var UrlSettings = {
                AirportsUrl : '@Url.Action("GetAirports", "Home")'
        }
    </script>
    
    <div id="header">
        <form class="form-horizontal" method="POST" action="@Url.Action("GetFlights")">
            <div class="form-group row">
                <label class="col-md-1 control-label">Departure</label>
                <div class="col-md-2">
                    <input onkeyup="fetchAvailableDeparture()"
                           list="departure" type="text" class="form-control" name="departureName" id="departureName" required/>
                    <datalist  id="departure"></datalist>
                </div>
                <div class="col-md-2">
                    <input type="date" name="beginningDate" class="form-control">
                </div>

                <label class="col-md-1 control-label">Destination</label>

                <div class="col-md-2">
                    <input onkeyup="fetchAvailableArrival()"
                           list="arrival" type="text" class="form-control" name="arrivalName" id="arrivalName" required/>
                    <datalist  id="arrival"></datalist>
                </div>
                <div class="col-md-2">
                    <input type="date" name="endingDate" class="form-control">
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Search" class="btn btn-primary">
                </div>
            </div>
        </form>
    </div>

    <div id="content">
        @if (ViewBag.flights != null)
        {
            foreach (var flight in ViewBag.flights)
            {
                <div>
                    <div class="left-content">
                        <div class="top-content">@flight.DepartureAirport.City.Name</div>
                        <div class="middle-content">@flight.DepartureAirport.Name</div>
                        <div class="bottom-content">@flight.StartDate.ToString("HH:mm dd MMM yyyy")</div>
                    </div><div class="center-content"><div class="left-center-content"><img src="~/Content/Img/arrow.png" height="40" width="40"></div><div class="center-center-content">@String.Format("{0:0.00}", flight.GetDistanceKm()) km, @flight.Plane.Name</div><div class="right-center-content"><img src="~/Content/Img/arrow.png" height="40" width="40"></div></div>
                    <div class="right-content">
                        <div class="top-content">@flight.ArrivalAirport.City.Name</div>
                        <div class="middle-content">@flight.ArrivalAirport.Name</div>
                        <div class="bottom-content">@flight.EndDate.ToString("HH:mm dd MMM yyyy")</div>
                    </div>
                </div>
                <div class="separator-content"></div>
            }
        }
    </div>
</body>
</html>
